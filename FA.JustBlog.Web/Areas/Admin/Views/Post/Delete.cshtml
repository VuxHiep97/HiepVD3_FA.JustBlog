@model PostViewModel

<form method="post" asp-action="Delete" asp-route-postId="@Model.Post.Id">
	<input asp-for="@Model.Post.Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Post</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Post.Title"></label>
			<input asp-for="@Model.Post.Title" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Post.PostContent"></label>
			<input asp-for="@Model.Post.PostContent" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Post.ShortDescription"></label>
			<input asp-for="@Model.Post.ShortDescription" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Post.UrlSlug"></label>
			<input asp-for="@Model.Post.UrlSlug" class="form-control" disabled/>
		</div>
		<div class="mb-3">

			<label asp-for="Post.Category.Name"></label>
			<input asp-for="Post.Category.Name" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.TagsSelected"></label>
			<input asp-for="@Model.TagsSelected" class="form-control" disabled/>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
		<a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to list
		</a>
	</div>
</form>


