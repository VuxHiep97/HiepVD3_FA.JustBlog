@model Comment

<form method="post" asp-controller="Comment" asp-action="Create">
	<input asp-for="@Model.PostId" rows="3" class="form-control" hidden/>

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Detail Comment</h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger" ></div>
		<div class="mb-3">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" class="form-control" disabled/>
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Email"></label>
			<input asp-for="@Model.Email" rows="3" class="form-control" disabled/>
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.CommentHeader"></label>
			<input asp-for="@Model.CommentHeader" rows="3" class="form-control" disabled/>
			<span asp-validation-for="@Model.CommentHeader" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.CommentText"></label>
			<input asp-for="@Model.CommentText" rows="3" class="form-control" disabled/>
			<span asp-validation-for="@Model.CommentText" class="text-danger"></span>
		</div>

		@*<button type="submit" class="btn btn-primary" style="width:150px">Create</button>*@
		<a asp-controller="Post" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to home
		</a>
	</div>
</form>


