@model CategoryViewModel

<form method="post" asp-controller="Category" asp-action="Details">
	<input asp-for="@Model.Id" class="form-control" hidden/>

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Description"></label>
			<input asp-for="@Model.Description" rows="3" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.UrlSlug"></label>
			<input asp-for="@Model.UrlSlug" rows="3" class="form-control" disabled/>
		</div>

		<a asp-controller="Post" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to list
		</a>
	</div>
</form>

